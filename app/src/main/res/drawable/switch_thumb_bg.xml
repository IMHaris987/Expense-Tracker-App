<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Checked State -->
    <item android:state_checked="true">
        <layer-list>
            <!-- Shadow -->
            <item
                android:left="2dp"
                android:top="2dp"
                android:right="-2dp"
                android:bottom="-2dp">
                <shape android:shape="oval">
                    <solid android:color="#00000015" />
                </shape>
            </item>
            <!-- White Circle -->
            <item>
                <shape android:shape="oval">
                    <solid android:color="@android:color/white" />
                    <size
                        android:width="20dp"
                        android:height="20dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    
    <!-- Unchecked State -->
    <item android:state_checked="false">
        <layer-list>
            <!-- Shadow -->
            <item
                android:left="2dp"
                android:top="2dp"
                android:right="-2dp"
                android:bottom="-2dp">
                <shape android:shape="oval">
                    <solid android:color="#00000010" />
                </shape>
            </item>
            <!-- White Circle -->
            <item>
                <shape android:shape="oval">
                    <solid android:color="@android:color/white" />
                    <size
                        android:width="20dp"
                        android:height="20dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    
    <!-- Default State -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/white" />
            <size
                android:width="20dp"
                android:height="20dp" />
        </shape>
    </item>
</selector>
